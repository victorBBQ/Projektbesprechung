---
import Layout from '../layouts/Layout.astro';
import TiltCard from '../components/TiltCard.astro';
const { nav } = Astro.props; // O importa tus traducciones aquí

const subtopics = Array.from({ length: 14 }, (_, i) => ({
  num: i + 1,
  title: nav[`m${i+1}T`],
  desc: nav[`m${i+1}D`],
  // ... colores y emojis
}));
---

<Layout title="Detalle Modul 1">
  <section class="py-20 bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4">
      <a href="/" class="mb-10 inline-block font-bold text-purple-600 hover:underline">← Volver al inicio</a>
      <h1 class="text-5xl font-black italic mb-12 uppercase tracking-tighter">
        Desglose: <span class="text-purple-600">PC-Grundlagen</span>
      </h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {subtopics.map(sub => (
          <TiltCard modNumber={sub.num} title={sub.title} desc={sub.desc} ... />
        ))}
      </div>
    </div>
  </section>
</Layout>
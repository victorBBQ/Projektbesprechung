---
interface Props {
  modNumber: string;
  title: string;
  desc?: string;
  colorClass?: string;
  emoji?: string;
  gridClass?: string;
}

const { modNumber, title, desc, colorClass = "bg-purple-600", emoji = "ðŸš€", gridClass = "" } = Astro.props;
---

<div class={`container-tilt ${gridClass}`}>
  <div class="canvas">
    {Array.from({ length: 25 }).map((_, i) => (
      <div class={`tracker tr-${i + 1}`}></div>
    ))}
    
    <div id="card" class={colorClass}>
      <div class="default-view">
        <span class="big-number">Modul {modNumber}</span>
      </div>

      <div class="hover-view">
        <span class="emoji-mini">{emoji}</span>
        <h3 class="title-reveal">{title}</h3>
        {desc && <p class="desc-reveal">{desc}</p>}
      </div>
    </div>
  </div>
</div>

<style>
  .container-tilt {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .canvas {
    perspective: 1000px;
    inset: 0;
    z-index: 10;
    position: absolute;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    grid-template-rows: repeat(5, 1fr);
  }

  #card {
    position: absolute;
    inset: 0;
    z-index: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 24px;
    transition: 500ms ease-out;
    padding: 1.5rem;
    overflow: hidden;
  }

  .default-view {
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: opacity 300ms;
  }

  .big-number {
    color: white;
    font-size: 1.5rem;
    font-weight: 900;
    letter-spacing: -0.05em;
  }

  .prompt-text {
    color: rgba(255,255,255,0.5);
    font-size: 0.6rem;
    font-weight: bold;
    margin-top: 5px;
  }

  .hover-view {
    position: absolute;
    inset: 0;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    opacity: 0;
    transform: translateY(20px);
    transition: all 400ms cubic-bezier(0.175, 0.885, 0.32, 1.275);
    pointer-events: none;
  }

  .emoji-mini { font-size: 2rem; margin-bottom: 0.5rem; }
  .title-reveal { color: white; font-weight: 900; font-size: 1.1rem; line-height: 1.1; font-style: italic; }
  .desc-reveal { color: rgba(255,255,255,0.9); font-size: 0.7rem; margin-top: 0.5rem; }

  .tracker { position: relative; z-index: 20; width: 100%; height: 100%; cursor: pointer; }

  .tracker:hover ~ #card .default-view {
    opacity: 0;
  }

  .tracker:hover ~ #card .hover-view {
    opacity: 1;
    transform: translateY(0);
  }

  .tr-1:hover ~ #card { transform: rotateX(20deg) rotateY(-10deg); }
  .tr-3:hover ~ #card { transform: rotateX(20deg) rotateY(0deg); }
  .tr-5:hover ~ #card { transform: rotateX(20deg) rotateY(10deg); }
  .tr-11:hover ~ #card { transform: rotateX(0deg) rotateY(-10deg); }
  .tr-13:hover ~ #card { transform: rotateX(0deg) rotateY(0deg) scale(1.05); }
  .tr-15:hover ~ #card { transform: rotateX(0deg) rotateY(10deg); }
  .tr-21:hover ~ #card { transform: rotateX(-20deg) rotateY(-10deg); }
  .tr-25:hover ~ #card { transform: rotateX(-20deg) rotateY(10deg); }

  /* Agrega aquÃ­ el resto de los tr-x si quieres precisiÃ³n total, 
     o usa estos como base */

  .tracker:hover ~ #card {
    filter: brightness(1.1);
    box-shadow: 0 20px 40px rgba(0,0,0,0.2);
  }
</style>
---
interface Props {
  modNumber: string;
  title: string;
  desc?: string | string[];
  colorClass?: string;
  emoji?: string;
  gridClass?: string;
  label?: string;
}

const { 
  modNumber, 
  title, 
  desc, 
  colorClass = "bg-purple-600", 
  emoji = "ðŸš€", 
  gridClass = "", 
  label = "Modul" 
} = Astro.props;
---

<div 
  class={`container-tilt ${gridClass} group cursor-pointer module-card-trigger`}
  data-title={title}
  data-desc={JSON.stringify(desc)}
  data-num={modNumber}
  data-label={label}
  data-color={colorClass} 
>
  <div class="canvas">
    {Array.from({ length: 25 }).map((_, i) => (
      <div class={`tracker tr-${i + 1}`}></div>
    ))}
    
    <div id="card" class={`${colorClass} relative neo-shadow border-4 border-black`}>
      <div class="absolute inset-0 bg-white/0 group-hover:bg-white/10 transition-colors pointer-events-none"></div>

      <div class="card-content relative z-10 flex flex-col items-center justify-center p-6 text-center h-full">
        <span class="text-white/70 font-black text-sm uppercase tracking-widest mb-2">
          {label} {modNumber}
        </span>
        
        <span class="text-5xl mb-4 filter drop-shadow-md">{emoji}</span>
        
        <h3 class="text-white font-black text-xl leading-tight italic tracking-tighter">
          {title}
        </h3>
        
        <div class="mt-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <span class="bg-black text-white text-[10px] font-bold px-3 py-1 rounded-full uppercase italic">Details ansehen</span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
:root {
  font-family: 'Inter', sans-serif; /* Fuente base para todo */
}

.big-number {
  font-family: 'Archivo', sans-serif;
  color: white;
  font-size: 2.2rem;
  font-weight: 900;
  font-style: italic;
  letter-spacing: -0.05em;
  line-height: 0.9;
}

.title-reveal { 
  font-family: 'Inter', sans-serif;
  color: white; 
  font-weight: 800; /* Extra bold pero no black para que no se empaste */
  font-size: 1.1rem; 
  line-height: 1.2; 
  margin-bottom: 0.5rem;
  text-shadow: 0 2px 4px rgba(0,0,0,0.2);
  letter-spacing: -0.02em;
}

/* El texto del modal o pequeÃ±as listas */
.desc-reveal, li {
  font-family: 'Inter', sans-serif;
  font-weight: 500;
  letter-spacing: 0.01em;
  line-height: 1.4; /* MÃ¡s espacio entre lÃ­neas para leer mejor en alemÃ¡n */
}
  .container-tilt {
    position: relative;
    width: 100%;
    height: 350px;
  }

  .neo-shadow {
    box-shadow: 8px 8px 0px #000;
  }

  .canvas {
    perspective: 1000px;
    inset: 0;
    z-index: 10;
    position: absolute;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    grid-template-rows: repeat(5, 1fr);
  }

  #card {
    position: absolute;
    inset: 0;
    z-index: 0;
    border-radius: 2rem;
    transition: 400ms ease-out;
    overflow: hidden;
    backface-visibility: hidden;
  }

  .tracker { position: relative; z-index: 20; width: 100%; height: 100%; }

  /* Rotaciones originales */
  .tr-1:hover ~ #card { transform: rotateX(15deg) rotateY(-10deg); }
  .tr-2:hover ~ #card { transform: rotateX(15deg) rotateY(-5deg); }
  .tr-3:hover ~ #card { transform: rotateX(15deg) rotateY(0deg); }
  .tr-4:hover ~ #card { transform: rotateX(15deg) rotateY(5deg); }
  .tr-5:hover ~ #card { transform: rotateX(15deg) rotateY(10deg); }
  .tr-6:hover ~ #card { transform: rotateX(10deg) rotateY(-10deg); }
  .tr-7:hover ~ #card { transform: rotateX(10deg) rotateY(-5deg); }
  .tr-8:hover ~ #card { transform: rotateX(10deg) rotateY(0deg); }
  .tr-9:hover ~ #card { transform: rotateX(10deg) rotateY(5deg); }
  .tr-10:hover ~ #card { transform: rotateX(10deg) rotateY(10deg); }
  .tr-11:hover ~ #card { transform: rotateX(0deg) rotateY(-10deg); }
  .tr-12:hover ~ #card { transform: rotateX(0deg) rotateY(-5deg); }
  .tr-13:hover ~ #card { transform: rotateX(0deg) rotateY(0deg) scale(1.02); }
  .tr-14:hover ~ #card { transform: rotateX(0deg) rotateY(5deg); }
  .tr-15:hover ~ #card { transform: rotateX(0deg) rotateY(10deg); }
  .tr-16:hover ~ #card { transform: rotateX(-10deg) rotateY(-10deg); }
  .tr-17:hover ~ #card { transform: rotateX(-10deg) rotateY(-5deg); }
  .tr-18:hover ~ #card { transform: rotateX(-10deg) rotateY(0deg); }
  .tr-19:hover ~ #card { transform: rotateX(-10deg) rotateY(5deg); }
  .tr-20:hover ~ #card { transform: rotateX(-10deg) rotateY(10deg); }
  .tr-21:hover ~ #card { transform: rotateX(-15deg) rotateY(-10deg); }
  .tr-22:hover ~ #card { transform: rotateX(-15deg) rotateY(-5deg); }
  .tr-23:hover ~ #card { transform: rotateX(-15deg) rotateY(0deg); }
  .tr-24:hover ~ #card { transform: rotateX(-15deg) rotateY(5deg); }
  .tr-25:hover ~ #card { transform: rotateX(-15deg) rotateY(10deg); }

  .tracker:hover ~ #card {
    filter: brightness(1.05);
    box-shadow: 12px 12px 0px #000;
  }
</style>
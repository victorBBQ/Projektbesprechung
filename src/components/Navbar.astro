  { code: "de", label: "Deutsch", flag: "üá©üá™" },
  { code: "fa", label: "ŸÅÿßÿ±ÿ≥€å", flag: "üáÆüá∑", dir: "rtl" },
  { code: "ru", label: "–†—É—Å—Å–∫–∏–π", flag: "üá∑üá∫" },

];

const currentLang = languages.find((l) => l.code === lang) || languages.find((l) => l.code === "de");

const t = {
  es: { home: "Inicio", about: "Sobre m√≠", contact: "Contacto", current: "Actual" },
  en: { home: "Home", about: "About", contact: "Contact", current: "Current" },
  de: { home: "Startseite", about: "√úber mich", contact: "Kontakt", current: "Aktuell" },
  fa: { home: "ÿµŸÅÿ≠Ÿá ÿßÿµŸÑ€å", about: "ÿØÿ±ÿ®ÿßÿ±Ÿá ŸÖŸÜ", contact: "ÿ™ŸÖÿßÿ≥", current: "ŸÅÿπŸÑ€å" },
  ru: { home: "–ì–ª–∞–≤–Ω–∞—è", about: "–û–±–æ –º–Ω–µ", contact: "–ö–æ–Ω—Ç–∞–∫—Ç", current: "–¢–µ–∫—É—â–∏–π" }
};

const nav = t[lang] || t.de;
---

<nav class="bg-white border-b border-gray-200 relative z-50">
  <div class="max-w-5xl mx-auto px-4">
    <div class="flex justify-between h-16 items-center">
      <a href={`${base}${lang}/`} class="font-bold text-xl text-purple-600 hover:opacity-80 transition">
        MiSitio
      </a>

      <div class="hidden md:flex space-x-8 items-center">
        <a href={`${base}${lang}/`} class="hover:text-purple-600 transition-colors font-medium">
          {nav.home}
        </a>
        <a href="#" class="hover:text-purple-600 transition-colors font-medium">
          {nav.about}
        </a>

        <div class="relative inline-block text-left">
          <button
            id="lang-menu-btn"
            class="flex items-center gap-2 bg-gray-50 border border-gray-200 px-3 py-2 rounded-lg hover:bg-gray-100 transition-all"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>
            <span class="text-sm font-semibold">{currentLang.label}</span>
          </button>

          <div id="lang-dropdown" class="hidden absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-xl shadow-2xl overflow-hidden ring-1 ring-black ring-opacity-5">
            {languages.map((l) => {
              const isCurrent = l.code === lang;
              
              return isCurrent ? (
                <div class="flex items-center justify-between px-4 py-3 text-sm text-gray-400 bg-gray-50 cursor-default select-none italic border-b border-gray-100 last:border-0" dir={l.dir || 'ltr'}>
                  <div class="flex items-center gap-3">
                    <span>{l.flag}</span> {l.label}
                  </div>
                  <span class="text-[9px] bg-gray-200 text-gray-500 px-1.5 py-0.5 rounded font-bold uppercase tracking-tighter">
                    {nav.current}
                  </span>
                </div>
              ) : (
                <a 
                  href={`${base}${l.code}/`} 
                  class="flex items-center gap-3 px-4 py-3 text-sm text-gray-700 hover:bg-purple-50 hover:text-purple-700 transition-all border-b border-gray-100 last:border-0"
                  dir={l.dir || 'ltr'}
                >
                  <span>{l.flag}</span> {l.label}
                </a>
              );
            })}
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  const btn = document.getElementById("lang-menu-btn");
  const dropdown = document.getElementById("lang-dropdown");

  btn?.addEventListener("click", (e) => {
    e.stopPropagation();
    dropdown?.classList.toggle("hidden");
  });

  document.addEventListener("click", () => {
    dropdown?.classList.add("hidden");
  });
</script>